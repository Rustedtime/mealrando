<!DOCTYPE html>
<html>
  <head>
    <title>Mealrando</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <header>
    <div class="flex-container" id="top-header">
      <div>
        <h1 class="siteName">Mealrando</h1>
      </div>
      <div>
        <% if user_signed_in? %>
          <%= link_to current_user.email, edit_user_registration_path %><br>
          <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
        <% else %>
          <%= link_to "Log in", new_user_session_path %><br>
          <%= link_to "Register", new_user_registration_path %>
        <% end %>
      </div>
    </div>
  </header>
  <nav class="flex-container" id="main-nav">
    <div><%= link_to "Home", "/" %></div>
    <div><%= link_to "Plan", "/recipes/plan" %></div>
  </nav>
  <div id="wrapper">
    <body>
      <%= yield %>
    </body>
  </div>
</html>
